<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean" lazy-init="false">
        <property name="triggers">
            <list>
                <ref bean="forceWorkCronTrigger"/>
            </list>
        </property>
    </bean>


    <bean id="airQualityManagerDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="airQualityService"/>
        <property name="targetMethod" value="save15DayAQI"/>
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="forceWorkCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="airQualityManagerDetail"/>
        <property name="cronExpression" value="0 0 0 1/1 * ? "/>
        <!--<property name="cronExpression" value="0/5 * * * * ?"/>-->
    </bean>
</beans>