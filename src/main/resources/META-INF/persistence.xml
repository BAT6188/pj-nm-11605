<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="dshbcbp">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.harmonywisdom.dshbcbp.demo.bean.Demo</class>
        <!--基本信息类-->
		<class>com.harmonywisdom.dshbcbp.enterprise.bean.Enterprise</class>
		<class>com.harmonywisdom.dshbcbp.production.bean.MainProduct</class>
		<class>com.harmonywisdom.dshbcbp.production.bean.OtherEquipment</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="default_schema" value="${db.schema}"/>
        </properties>
    </persistence-unit>
</persistence>
