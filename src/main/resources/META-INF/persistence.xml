<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="dshbcbp">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.harmonywisdom.dshbcbp.demo.bean.Demo</class>
        <!--基本信息类-->
		<class>com.harmonywisdom.dshbcbp.enterprise.bean.Enterprise</class>
		<class>com.harmonywisdom.dshbcbp.production.bean.MainProduct</class>
		<class>com.harmonywisdom.dshbcbp.production.bean.OtherEquipment</class>

        <!--短信记录-->
        <class>com.harmonywisdom.dshbcbp.sms.bean.SmsRecord</class>
        <class>com.harmonywisdom.dshbcbp.sms.bean.SmsSendStatus</class>
        <!--消息提醒-->
        <class>com.harmonywisdom.dshbcbp.alert.bean.Message</class>
        <class>com.harmonywisdom.dshbcbp.alert.bean.MessageTrace</class>

        <!--企业污染防治设施-->
        <class>com.harmonywisdom.dshbcbp.enterprise.bean.SolidControlFacility</class>
        <class>com.harmonywisdom.dshbcbp.enterprise.bean.SoundControlFacility</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="default_schema" value="${db.schema}"/>
        </properties>
    </persistence-unit>
</persistence>
